# ============================================================
# Swiftor Caddyfile - Static Files + Reverse Proxy
# ============================================================

{
    # Global options
    admin off
}

:80 {
    # Health check endpoint
    respond /health "OK" 200

    # API routes - proxy to backend with timeouts and health checks
    handle /api/* {
        reverse_proxy backend:8000 {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}

            # SSE support - disable buffering
            flush_interval -1

            # Timeouts to prevent hanging requests
            transport http {
                dial_timeout 10s
                response_header_timeout 120s
                read_timeout 120s
                write_timeout 120s
            }

            # Health checking
            health_uri /health
            health_interval 30s
            health_timeout 10s
            fail_duration 30s
        }
    }

    # API docs - proxy to backend
    handle /docs* {
        reverse_proxy backend:8000
    }

    handle /redoc* {
        reverse_proxy backend:8000
    }

    handle /openapi.json {
        reverse_proxy backend:8000
    }

    # Uploads - proxy to backend
    handle /uploads/* {
        reverse_proxy backend:8000
    }

    # Static assets - aggressive caching (immutable)
    handle /assets/* {
        root * /srv
        header Cache-Control "public, max-age=31536000, immutable"
        encode gzip
        file_server
    }

    # Static files - React app (SPA routing)
    handle {
        root * /srv
        encode gzip

        # Cache static files (JS, CSS, images) for 1 day
        @static {
            path *.js *.css *.png *.jpg *.jpeg *.gif *.svg *.ico *.woff *.woff2
        }
        header @static Cache-Control "public, max-age=86400"

        try_files {path} /index.html
        file_server
    }
}
