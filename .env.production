# ============================================================
# Swiftor Production Environment Variables
# ============================================================
# IMPORTANT: Copy this file to .env and fill in actual values
# DO NOT commit .env to version control!
# ============================================================

# ----------------------------------------------------------
# REQUIRED - Security
# ----------------------------------------------------------
# Generate with: openssl rand -hex 32
SECRET_KEY=

# ----------------------------------------------------------
# REQUIRED - Database
# ----------------------------------------------------------
POSTGRES_USER=swiftor
POSTGRES_PASSWORD=
POSTGRES_DB=swiftor

# ----------------------------------------------------------
# REQUIRED - API Keys
# ----------------------------------------------------------
OPENAI_API_KEY=

# ----------------------------------------------------------
# REQUIRED - URLs
# ----------------------------------------------------------
# Your domain with protocol (no trailing slash)
FRONTEND_URL=https://your-domain.com

# ----------------------------------------------------------
# OPTIONAL - OAuth (Google Login)
# ----------------------------------------------------------
# Leave empty to disable Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ----------------------------------------------------------
# OPTIONAL - Logging & Debug
# ----------------------------------------------------------
LOG_LEVEL=INFO
DEBUG=false

# ----------------------------------------------------------
# GENERATED - Do not modify
# ----------------------------------------------------------
# These are constructed from the above values in docker-compose
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
# REDIS_URL=redis://redis:6379/0
